{
  "name": "namanbot",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "e": "electron .",
    "build:win": "electron-builder --win --x64 --publish never",
    "deploay:win": "electron-builder build --win --x64 --publish always"
  },
  "dependencies": {
    "custom-electron-titlebar": "^3.2.4",
    "open": "^7.2.1",
    "pbkdf2-password": "^1.2.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "tmi.js": "^1.5.0",
    "electron-updater": "^4.3.5"
  },
  "devDependencies": {
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1"
  },
  "build": {
    "productName": "NamanBot",
    "appId": "com.esllo.namanbot",
    "publish": {
      "provider": "github",
      "owner": "ESLLO",
      "repo": "NamanBot"
    },
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": ""
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "installerLanguages": [
        "ko_KR"
      ],
      "language": "1042"
    }
  }
}
